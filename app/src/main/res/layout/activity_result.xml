<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.hairstyleforyou.ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:padding="10dp"
                tools:text="LONG HAIR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img"
                tools:src="@drawable/oval_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:padding="20dp"
                android:adjustViewBounds="true"/>



            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_desc"
                android:text="lorem ipsum sit dolor amet lorem ipsum sit dolor ametlorem ipsum sit dolor amet lorem ipsum sit dolor amet lorem ipsum sit dolor amet lorem ipsum sit dolor ametlorem ipsum sit dolor ametlorem ipsum sit dolor ametlorem ipsum sit dolor amet lorem ipsum sit dolor amet lorem ipsum sit dolor amet"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
